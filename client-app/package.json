{
  "name": "toolbox",
  "version": "6.0-SNAPSHOT",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --env prodBuild",
    "buildAndAnalyze": "webpack --env prodBuild --env analyzeBundles",
    "hoistVer": "cat node_modules/@xh/hoist/package.json | grep version",
    "lint": "npm lint:all",
    "lint:all": "npm lint:js && npm lint:styles",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint \"**/*.s?(a|c)ss\"",
    "tsc": "node node_modules/typescript/bin/tsc",
    "start": "npm install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server",
    "startOnDevice": "npm install && webpack-dev-server --env inlineHoist --env devHost=$(ipconfig getifaddr en0)",
    "startAndAnalyze": "npm install && webpack-dev-server --env analyzeBundles",
    "startWithHoist": "cd ../../hoist-react && npm install && cd ../toolbox/client-app && npm install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server --env inlineHoist",
    "startWithHoistSecure": "cd ../../hoist-react && npm install && cd ../toolbox/client-app && npm install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server --env inlineHoist --env devHttps=true --env devHost=toolbox-local.xh.io",
    "startWithHoistAndAnalyze": "npm startWithHoist --env analyzeBundles",
    "prepare": "cd .. && husky client-app/.husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.s?(a|c)ss": [
      "stylelint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ag-grid-community/client-side-row-model": "~31.2.0",
    "@ag-grid-community/core": "~31.2.0",
    "@ag-grid-community/react": "~31.2.0",
    "@ag-grid-community/styles": "~31.2.0",
    "@ag-grid-enterprise/clipboard": "~31.2.0",
    "@ag-grid-enterprise/column-tool-panel": "~31.2.0",
    "@ag-grid-enterprise/core": "~31.2.0",
    "@ag-grid-enterprise/filter-tool-panel": "~31.2.0",
    "@ag-grid-enterprise/menu": "~31.2.0",
    "@ag-grid-enterprise/row-grouping": "~31.2.0",
    "@ag-grid-enterprise/side-bar": "~31.2.0",
    "@ag-grid-enterprise/sparklines": "~31.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@xh/hoist": "64.0.5",
    "@xh/package-template": "~3.0.1",
    "core-js": "3.x",
    "highcharts": "11.x",
    "lodash": "4.x",
    "moment": "2.x",
    "react": "~18.2.0",
    "react-dom": "~18.2.0"
  },
  "devDependencies": {
    "@xh/hoist-dev-utils": "^9.0.0-SNAPSHOT",
    "cross-env": "7.x",
    "eslint": "8.x",
    "eslint-config-prettier": "9.x",
    "husky": "9.x",
    "lint-staged": "15.x",
    "postcss": "8.x",
    "prettier": "3.x",
    "stylelint": "16.x",
    "stylelint-config-standard-scss": "13.x",
    "typescript": "~5.1.6"
  },
  "resolutions": {
    "core-js": "3.x"
  }
}
