{
  "name": "toolbox",
  "version": "3.0-SNAPSHOT",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --env prodBuild",
    "buildAndAnalyze": "webpack --env prodBuild --env analyzeBundles",
    "hoistVer": "cat node_modules/@xh/hoist/package.json | grep version",
    "lint": "yarn lint:all",
    "lint:all": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:styles": "stylelint \"**/*.s?(a|c)ss\"",
    "start": "yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server",
    "startOnDevice": "yarn install && webpack-dev-server --env inlineHoist --env devHost=$(hostname)",
    "startAndAnalyze": "yarn install && webpack-dev-server --env analyzeBundles",
    "startWithHoist": "cd ../../hoist-react && yarn install && cd ../toolbox/client-app && yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server --env inlineHoist",
    "prepare": "cd .. && husky install client-app/.husky"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint",
    "*.s?(a|c)ss": "stylelint"
  },
  "dependencies": {
    "@ag-grid-community/client-side-row-model": "~28.1.0",
    "@ag-grid-community/core": "~28.1.0",
    "@ag-grid-community/react": "~28.1.0",
    "@ag-grid-enterprise/clipboard": "~28.1.0",
    "@ag-grid-enterprise/column-tool-panel": "~28.1.0",
    "@ag-grid-enterprise/core": "~28.1.0",
    "@ag-grid-enterprise/filter-tool-panel": "~28.1.0",
    "@ag-grid-enterprise/menu": "~28.1.0",
    "@ag-grid-enterprise/row-grouping": "~28.1.0",
    "@ag-grid-enterprise/side-bar": "~28.1.0",
    "@ag-grid-enterprise/sparklines": "~28.1.0",
    "@auth0/auth0-spa-js": "~1.22.0",
    "@fortawesome/free-brands-svg-icons": "~6.1.1",
    "@xh/hoist": "^51.0.0-SNAPSHOT",
    "@xh/package-template": "~2.0.0",
    "core-js": "^3.0.0",
    "highcharts": "~9.3.0",
    "lodash": "^4.0.0",
    "moment": "^2.0.0",
    "react": "~17.0.1",
    "react-dom": "~17.0.1"
  },
  "devDependencies": {
    "@xh/hoist-dev-utils": "~6.0.0",
    "cross-env": "^7.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "postcss": "^8.0.0",
    "stylelint": "^14.0.0",
    "stylelint-config-standard-scss": "^5.0.0"
  },
  "resolutions": {
    "core-js": "^3.0.0"
  }
}
