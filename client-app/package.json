{
  "name": "toolbox",
  "version": "4.0-SNAPSHOT",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --env prodBuild",
    "buildAndAnalyze": "webpack --env prodBuild --env analyzeBundles",
    "hoistVer": "cat node_modules/@xh/hoist/package.json | grep version",
    "lint": "yarn lint:all",
    "lint:all": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint \"**/*.s?(a|c)ss\"",
    "start": "yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server",
    "startOnDevice": "yarn install && webpack-dev-server --env inlineHoist --env devHost=$(hostname)",
    "startAndAnalyze": "yarn install && webpack-dev-server --env analyzeBundles",
    "startWithHoist": "cd ../../hoist-react && yarn install && cd ../toolbox/client-app && yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server --env inlineHoist",
    "prepare": "cd .. && husky install client-app/.husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.s?(a|c)ss": "stylelint"
  },
  "dependencies": {
    "@ag-grid-community/client-side-row-model": "~28.2.0",
    "@ag-grid-community/core": "~28.2.0",
    "@ag-grid-community/react": "~28.2.0",
    "@ag-grid-enterprise/clipboard": "~28.2.0",
    "@ag-grid-enterprise/column-tool-panel": "~28.2.0",
    "@ag-grid-enterprise/core": "~28.2.0",
    "@ag-grid-enterprise/filter-tool-panel": "~28.2.0",
    "@ag-grid-enterprise/menu": "~28.2.0",
    "@ag-grid-enterprise/row-grouping": "~28.2.0",
    "@ag-grid-enterprise/side-bar": "~28.2.0",
    "@ag-grid-enterprise/sparklines": "~28.2.0",
    "@auth0/auth0-spa-js": "~1.22.0",
    "@fortawesome/free-brands-svg-icons": "~6.2.0",
    "@xh/hoist": "^56.0.0-SNAPSHOT",
    "@xh/package-template": "~2.0.0",
    "core-js": "3.x",
    "highcharts": "~10.3.2",
    "lodash": "4.x",
    "moment": "2.x",
    "react": "~18.2.0",
    "react-dom": "~18.2.0"
  },
  "devDependencies": {
    "@xh/hoist-dev-utils": "~6.1.1",
    "cross-env": "7.x",
    "husky": "8.x",
    "lint-staged": "13.x",
    "postcss": "8.x",
    "stylelint": "14.x",
    "stylelint-config-standard-scss": "6.x",
    "typescript": "~4.9.3"
  },
  "resolutions": {
    "core-js": "3.x"
  }
}
